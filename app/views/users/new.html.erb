<%= render "shared/no_buttons_header" %>

<div id="contentForm">
  <h2>New User Sign-Up</h2>
  
  <p>Welcome! Hubbub is a web app for reading and managing your latest updates from Twitter, Facebook, Gmail, and more.</p>
  
  <p><%= link_to "Log in instead &rarr;".html_safe, new_session_path, class: "btn btn-info" %></p>
  
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <h3>Registration Error:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email, { autocorrect: "off", autocapitalize: "off" } %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </p>
    
    <p><%= f.submit "Sign Up", class: "btn" %></p>
  <% end %>
</div>
